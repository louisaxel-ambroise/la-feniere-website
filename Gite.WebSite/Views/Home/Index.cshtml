@{
    ViewBag.Title = "Accueil";
    ViewBag.Color = "#b74506";
}

<script src="https://maps.googleapis.com/maps/api/js?callback=initMap" async defer></script>
<script type="text/javascript">
    function initMap() {
        var gitePosition = { lat: 44.690441, lng: 4.281118 };
        var mapDiv = document.getElementById('map');
        var map = new google.maps.Map(mapDiv, {
            scrollwheel: false,
            center: gitePosition,
            mapTypeId: google.maps.MapTypeId.HYBRID,
            zoom: 7
        });

        var infowindow = new google.maps.InfoWindow({
            content: "<h4>Gîte La Fenière</h4>Hameau de Veyrières<br />07380 Chirols<br />France"
        });

        var marker = new google.maps.Marker({
            position: gitePosition,
            map: map,
            title: 'Gîte La Fenière'
        });
        marker.addListener('click', function () {
            window.location = "/home/contact#plan";
        });
    }
</script>

<div class="row">
    <div class="text-center">
        <img src="~/Content/Images/12590_8.jpg" class="img-thumbnail" alt="Chirols">
    </div>
    <h2>Bienvenue à La Fenière</h2>
    <p>Description rapide du gîte.</p>
</div>
